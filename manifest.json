{
    "manifest_version": 2,
    "name": "Conversation Exporter",
    "version": "1.0",
    "description": "Export conversations to JSON",
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}
